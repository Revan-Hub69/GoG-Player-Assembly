{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GOG Proposals Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "title", "summary", "details", "support", "lastUpdated", "status"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "description": "Unique identifier in kebab-case"
      },
      "title": {
        "type": "object",
        "required": ["it", "en"],
        "properties": {
          "it": { "type": "string", "minLength": 5, "maxLength": 100 },
          "en": { "type": "string", "minLength": 5, "maxLength": 100 }
        }
      },
      "summary": {
        "type": "object",
        "required": ["it", "en"],
        "properties": {
          "it": { "type": "string", "minLength": 20, "maxLength": 300 },
          "en": { "type": "string", "minLength": 20, "maxLength": 300 }
        }
      },
      "details": {
        "type": "object",
        "required": ["it", "en"],
        "properties": {
          "it": {
            "type": "array",
            "items": { "type": "string", "minLength": 10 },
            "minItems": 2,
            "maxItems": 8
          },
          "en": {
            "type": "array",
            "items": { "type": "string", "minLength": 10 },
            "minItems": 2,
            "maxItems": 8
          }
        }
      },
      "support": {
        "type": "string",
        "enum": ["alto", "medio", "basso"]
      },
      "lastUpdated": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Date in YYYY-MM-DD format"
      },
      "status": {
        "type": "string",
        "enum": ["active", "draft", "archived"]
      }
    }
  }
}